@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">ASP.NET</h1>
        <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
        <p><a href="https://asp.net" class="btn btn-primary btn-md">Learn more &raquo;</a></p>
    </section>

    @Html.Label("Enter Your Name")

    @Html.TextBox("name", null, new { @class = "form-control", placeholder = "Your Name", @required = true })

    @Html.Label("Enter Your Email")

    @Html.TextBox("name", null, new { @class = "form-control", placeholder = "Your Email", @required = true })

    @Html.Label("Enter Your Password")

    @Html.Password("password", null, new { @class = "form-control", placeholder = "Your Password", @required = true }) <br />

    @Html.Label("Your Gender: ")

    @Html.RadioButton("gender", "Male", false, new { id = "gender1" }) <span>Male</span>
    @Html.RadioButton("gender", "female", false, new { id = "gender2" }) <span>Female</span> <br />

    @Html.Label("Select Your City" , new {@class = "form-label"})

    @Html.DropDownList("city", new SelectList(new[] {"Karachi", "Hyderabad", "Sukkhar", "Larkana" , "Lahore"}) , "Select Your City" , new {@class = "form-select"}) <br />

    <button>Submit</button>
</main>